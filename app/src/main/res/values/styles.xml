<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--糗事页面的标题样式-->
    <style name="EmbarrassingFragmentTitleTextStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:textColor">@color/lightWhite</item>
        <item name="android:background">@null</item>
    </style>


    <style name="MainRadioButtonTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@drawable/selector_main_text_color</item>
        <item name="android:textSize">@dimen/mainRadioButton</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

</resources>
